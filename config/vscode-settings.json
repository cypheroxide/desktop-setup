{
    // VS Code Settings Template
    // Place this at ~/.config/Code/User/settings.json
    
    // Editor Configuration
    "editor.fontSize": 14,
    "editor.fontFamily": "'Fira Code', 'JetBrains Mono', 'Cascadia Code', monospace",
    "editor.fontLigatures": true,
    "editor.lineHeight": 1.5,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.wordWrap": "on",
    "editor.lineNumbers": "on",
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [80, 120],
    "editor.minimap.enabled": true,
    "editor.minimap.showSlider": "always",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.cursorBlinking": "smooth",
    "editor.smoothScrolling": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.suggestSelection": "first",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingQuotes": "always",
    "editor.autoIndent": "full",
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    
    // Workbench Configuration
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.sideBar.location": "left",
    "workbench.activityBar.visible": true,
    "workbench.statusBar.visible": true,
    "workbench.editor.enablePreview": false,
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.tabCloseButton": "right",
    "workbench.tree.indent": 20,
    "workbench.tree.renderIndentGuides": "always",
    
    // File Explorer
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.compactFolders": false,
    "explorer.openEditors.visible": 10,
    
    // Search Configuration
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/dist": true,
        "**/build": true,
        "**/.git": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    
    // File Configuration
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": true,
        "**/.nyc_output": true,
        "**/coverage": true
    },
    "files.associations": {
        "*.env": "dotenv",
        "*.conf": "ini",
        "Dockerfile*": "dockerfile",
        "docker-compose*.yml": "dockercompose",
        "*.tsx": "typescriptreact",
        "*.jsx": "javascriptreact"
    },
    
    // Terminal Configuration
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "'Fira Code', 'JetBrains Mono', monospace",
    "terminal.integrated.shell.linux": "/bin/bash",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.enableBell": false,
    
    // Language Specific Settings
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.tabSize": 4
    },
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml",
        "editor.tabSize": 2
    },
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    
    // Git Configuration
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.autorefresh": true,
    "git.openRepositoryInParentFolders": "always",
    "gitlens.showWelcomeOnInstall": false,
    "gitlens.showWhatsNewAfterUpgrades": false,
    
    // Extensions Configuration
    "extensions.autoUpdate": true,
    "extensions.autoCheckUpdates": true,
    
    // Prettier Configuration
    "prettier.singleQuote": true,
    "prettier.trailingComma": "es5",
    "prettier.tabWidth": 2,
    "prettier.semi": true,
    "prettier.printWidth": 80,
    
    // ESLint Configuration
    "eslint.alwaysShowStatus": true,
    "eslint.format.enable": true,
    
    // Python Configuration
    "python.defaultInterpreterPath": "/usr/bin/python3",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.formatting.provider": "black",
    "python.sortImports.args": ["--profile", "black"],
    
    // Docker Configuration
    "docker.showStartPage": false,
    
    // Live Server Configuration
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.donotVerifyTags": true,
    
    // Auto Rename Tag
    "auto-rename-tag.activationOnLanguage": [
        "html",
        "xml",
        "php",
        "javascript",
        "typescript",
        "jsx",
        "tsx"
    ],
    
    // Bracket Pair Colorizer (deprecated - now built-in)
    "bracket-pair-colorizer-2.depreciation-notice": false,
    
    // Security
    "security.workspace.trust.untrustedFiles": "open",
    "security.workspace.trust.enabled": false,
    
    // Telemetry
    "telemetry.telemetryLevel": "off",
    
    // Update Configuration
    "update.mode": "start",
    "update.showReleaseNotes": false,
    
    // Window Configuration
    "window.zoomLevel": 0,
    "window.restoreWindows": "all",
    "window.newWindowDimensions": "inherit",
    
    // Emmet Configuration
    "emmet.includeLanguages": {
        "javascript": "javascriptreact",
        "typescript": "typescriptreact"
    },
    
    // Remote Development
    "remote.SSH.remotePlatform": {
        "aurumos": "linux",
        "eresos": "linux",
        "saeulfr": "linux",
        "pi4-router": "linux",
        "brokkr": "linux"
    },
    "remote.SSH.defaultExtensions": [
        "ms-python.python",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml"
    ]
}
